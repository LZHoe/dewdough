            <script>
                function saveChanges() {
                    
                    var url = "/editItemlisting/:Itemid" + req.params.Itemid;
        
                    // alert(document.getElementById("image").files[0].name);
        
                    var Itemid = $(this).closest("div").data('id');
        
                    var newItemValues = {
                        ItemName: $("#ItemName").val(),
                        price: $("#price").val(),
                        category: $("#category").val(),
                        Description: $("#Description").val(),
                        MeetupLocation: $("#MeetupLocation").val(),
                        pickupmethod: $("pickupmethod").val(),
                        imageName: document.getElementById("image").files[0].name,
                        // file: document.getElementById("image").files[0].name,
                    }
                    $.ajax({
                        url: url,
                        type: "POST",
                        data: JSON.stringify(newItemValues),
                        dataType: "json",
                        contentType: "application/json",
                        success: function(result){
                            alert("Item details updated successfully");
                            location.href = "/itemlisted";
                        },
                        error: function(result){
                            alert("Error updating item details");
                            discardChanges();
                        }
                    })
                }
        
                function discardChanges() {
                    location.href = "/itemlisted"
                }
            </script>
