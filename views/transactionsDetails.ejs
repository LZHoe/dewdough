<!DOCTYPE html>
<html lang="en">
    <head>
        <% include partial/head %>
    </head>
    <body>
        <% include partial/header %>
        
        <!--================Product Compare Area =================-->
        <section class="product_compare_area">
            <div class="container">
                <% if (login == 2) { %>
                <h2>Admin Actions</h2>
                <hr>
                <% } %>
                <div class="compare_table">
                    <div class="table-responsive-md">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th scope="row"><span>Item</span></th>
                                    <td><h5><%= data.ItemName %></h5></td>
                                </tr>
                                <tr>
                                    <th scope="row"><span>Sold by</span></th>
                                    <td><h5><%= data.username %></h5></td>
                                </tr>
                                <tr>
                                    <th scope="row"><span>Start Date</span></th>
                                    <td><h5><%= data.createdAt %></h5></td>
                                </tr>
                                <tr>
                                    <th scope="row"><span>Last Update</span></th>
                                    <td><h5><%= data.updatedAt %></h5></td>
                                </tr>
                                <tr>
                                    <th scope="row"><span>Status</span></th>
                                    <td><h5><%= data.status %></h5></td>
                                </tr>
                                <tr>

                                </tr>
                                    <th scope="row"><span>Original Price</span></th>
                                    <td><h5>$<%= data.price %></h5></td>

                                <tr>
                                    <th scope="row"><span>Offered Price</span></th>
                                    <td><h5>$<%= data.offer %></h5></td>
                                </tr>
                                <tr>
                                    <th scope="row"><span>Payment ID</span></th>
                                    <td><h5><%= data.paymentId %></h5></td>
                                </tr>
                                <tr>
                                    <th scope="row"><span>Payment Method</span></th>
                                    <td><h5><%= data.paymentMethod %></h5></td>
                                </tr>
                                
                                <tr>
                                    <th scope="row"><span>Public</span></th>
                                    <td><h5><%= data.visible %></h5></td>
                                </tr>
                                <tr>
                                    <th scope="row"><span>Description</span></th>
                                    <td><h5><%= data.Description%></h5></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <% if (login == 2) { %>
                    <hr>
                    <h3>Transaction Log</h3>
                    <table class="table">
                        <tr>
                            <th>Date</th>
                            <th>Quantity</th>
                            <th>Offer</th>
                            <th>Made By</th>
                            <th>Action</th>
                        </tr>
                        <% logData.forEach((log) => { %>
                        <tr>
                            <td><%= log.updatedAt %></td>
                            <td><%= log.qty %></td>
                            <td>$<%= log.offer %></td>
                            <td><%= log.username %></td>
                            <td><%= log.action %></td>
                        </tr>
                        <% }) %>
                    </table>
                    <br>
                    <% } %>
                    <% if (login == 1) { %>
                    <a class="add_cart_btn continue" href="/transactions">Return to All Transactions</a>
                    <% } %>
                    <% if (login == 2){%>
                    <form action="/admin/delete/<%= data.transactionId %>" method="POST">
                        <button class="btn btn-primary update_btn" >Delete</button>
                    </form>
                    <br>
                    <form action="/admin/undelete/<%= data.transactionId %>" method="POST">
                        <button class="btn btn-primary update_btn" >Undelete</button>
                    </form>
                    <br>
                    <form action="/admin/edit/<%= data.transactionId %>" method="GET">
                        <button class="btn btn-primary update_btn" >Edit</button>
                    </form>
                    <% } %>
                </div>
            </div>
        </section>
        <!--================End Product Compare Area =================-->
        
        <% include partial/footer %>
        
        
        
        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        <script src="js/jquery-3.2.1.min.js"></script>
        <!-- Include all compiled plugins (below), or include individual files as needed -->
        <script src="js/popper.min.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <!-- Rev slider js -->
        <script src="vendors/revolution/js/jquery.themepunch.tools.min.js"></script>
        <script src="vendors/revolution/js/jquery.themepunch.revolution.min.js"></script>
        <script src="vendors/revolution/js/extensions/revolution.extension.actions.min.js"></script>
        <script src="vendors/revolution/js/extensions/revolution.extension.video.min.js"></script>
        <script src="vendors/revolution/js/extensions/revolution.extension.slideanims.min.js"></script>
        <script src="vendors/revolution/js/extensions/revolution.extension.layeranimation.min.js"></script>
        <script src="vendors/revolution/js/extensions/revolution.extension.navigation.min.js"></script>
        <script src="vendors/revolution/js/extensions/revolution.extension.slideanims.min.js"></script>
        <!-- Extra plugin css -->
        <script src="vendors/counterup/jquery.waypoints.min.js"></script>
        <script src="vendors/counterup/jquery.counterup.min.js"></script>
        <script src="vendors/owl-carousel/owl.carousel.min.js"></script>
        <script src="vendors/bootstrap-selector/js/bootstrap-select.min.js"></script>
        <script src="vendors/image-dropdown/jquery.dd.min.js"></script>
        <script src="js/smoothscroll.js"></script>
        <script src="vendors/isotope/imagesloaded.pkgd.min.js"></script>
        <script src="vendors/isotope/isotope.pkgd.min.js"></script>
        <script src="vendors/magnify-popup/jquery.magnific-popup.min.js"></script>
        <script src="vendors/vertical-slider/js/jQuery.verticalCarousel.js"></script>
        <script src="vendors/jquery-ui/jquery-ui.js"></script>
        
        <script src="js/theme.js"></script>
    </body>
</html>